<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    tools:context=".modules.login.forgotPassword">

    <!-- לוגו -->
    <ImageView
        android:id="@+id/fragment_forgot_password_logo"
        android:layout_width="340dp"
        android:layout_height="117dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo_activity_share"
        android:alpha="1"
        android:layout_gravity="center" />

    <!-- כותרת "Forgot password" -->
    <TextView
        android:id="@+id/fragment_forgot_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="66dp"
        android:gravity="center" />

    <!-- שדה דוא"ל -->
    <EditText
        android:id="@+id/fragment_forgot_password_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_text"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black" />

    <!-- קישור "Remember your password?" -->
    <TextView
        android:id="@+id/fragment_forgot_password_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember your password?"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="?attr/selectableItemBackground" />

    <!-- כפתור "Send" -->
    <Button
        android:id="@+id/fragment_forgot_password_btn_send"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Send"
        android:layout_marginBottom="56dp" />

</LinearLayout>
